<h1 class="mb-3">All our Flats (<%= @flats.count %>)</h1>
<div class="wrapper">
  <% @flats.each do |f| %>
    <div class="card" style="width: 18rem;">
      <img class="card-img-top" src="https://images.unsplash.com/photo-1494526585095-c41746248156?w=1200" alt="Card image cap">
      <div class="card-body bg-light">
        <h4 class="card-title"><%= f.name %></h4>
        <p class="card-text"><%= f.address %></p>
      </div>
      <div class="card-body d-flex pt-0 pb-0 bg-light">
        <p class="card-text mr-2"><i class="fas fa-user-friends"></i> <%= f.number_of_guests %></p>
        <p class="card-text"><i class="fas fa-euro-sign"></i> <%= f.price_per_night %></p>
      </div>
      <div class="card-body pt-2 pb-2 text-center">
        <%= link_to flat_path(f), class: "card-link" do %>
          <i class="fas fa-info"></i>
        <% end %>
        <%= link_to edit_flat_path(f), class: "card-link" do %>
          <i class="fas fa-edit"></i>
        <% end %>
        <%= link_to flat_path(f),
          method: :delete,
          data: { confirm: "Remove #{f.name}?" },
          class: "card-link" do %>
            <i class="fas fa-trash-alt"></i>
        <% end %>
      </div>
    </div>
  <% end %>
</div>
